<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--tarea 2, parte 3, Permisos de internet y almacenamiento -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <!-- tarea 2, parte 3, cambiar nombre a la aplicacion-->
    <application
        android:name="uR_BitApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ur_bit_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ur_bit_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TareaProgramacionMultimedia"
        tools:targetApi="31">
            <!--tarea 2, parte 3, Fijar orientacion de activity (configChanges y screenOrientation-->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TareaProgramacionMultimedia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>